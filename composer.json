{
    "name": "eznix86/laravel-litestream",
    "description": "Litestream integration for Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bruno Bernard",
            "email": "contact.brunobernard@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "symfony/yaml": "^7.4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.9",
        "pestphp/pest": "^4.4",
        "pestphp/pest-plugin-laravel": "^4.0",
        "laravel/pint": "^1.27",
        "phpstan/phpstan": "^2.1",
        "larastan/larastan": "^3.9",
        "rector/rector": "^2.3",
        "mrpunyapal/rector-pest": "^0.1.9",
        "driftingly/rector-laravel": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Eznix86\\Litestream\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Eznix86\\Litestream\\LitestreamServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "lint": [
            "vendor/bin/rector process --dry-run",
            "vendor/bin/phpstan analyse --memory-limit=1G",
            "vendor/bin/pint --test"
        ],
        "lint:fix": [
            "vendor/bin/rector process",
            "vendor/bin/phpstan analyse --memory-limit=1G",
            "vendor/bin/pint"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    }
}
